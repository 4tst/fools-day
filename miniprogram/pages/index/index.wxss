/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  /* border: 1px solid gray; */
}

.avatar-wrapper{
    background-color: transparent;
}

.avatar{
    width: 60px;
    height: 60px;
    border-radius: 50%;
}

.nickname{
    padding: 10px;
    text-align: center;
    font-weight: bolder;
}

.prompt{
    width: 70%;
    margin: 50px auto;
    word-wrap: break-word;
    word-break: break-all;
    color: red;
    font-weight: 100;
}

video{
    border-radius: 5px;
}

.ghost{
    width: 85%;
    display: block;
    margin: 0 auto;
    text-align: center;
}
.ghost-image{
    border-radius: 6px;
}
.ghost-text{
    color: green;
}